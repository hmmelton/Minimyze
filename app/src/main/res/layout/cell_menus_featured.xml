<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/half_standard_margin"
    android:layout_marginRight="@dimen/half_standard_margin">

    <com.sonora.android.views.SquareImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:byHeight="true"
        android:src="@drawable/menu_placeholder"
        android:adjustViewBounds="true"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/background_image"
        android:layout_alignBottom="@id/background_image"
        android:layout_alignLeft="@id/background_image"
        android:layout_alignRight="@id/background_image"
        android:background="@color/black_overlay"/>

    <TextView
        android:id="@+id/cell_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/background_image"
        android:layout_alignLeft="@id/background_image"
        android:layout_alignRight="@id/background_image"
        android:text="This is a menu name blah blah blah how long can this go"
        android:textAlignment="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@android:color/white"/>

</RelativeLayout>